<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
   http://www.springframework.org/schema/beans/spring-beans.xsd">

	<!-- Bean instantiation with default constructor -->
	


<bean id="e" class="assignments.CoreJava.EmployeeManagementApp02.Employees" autowire="byName">
		<!-- Constructor resolution based on name -->
		<constructor-arg name="id"
			value="1" />
		<constructor-arg name="name"
			value="Sia" />
			<constructor-arg name="fulltime"
			value="true" />

		<!-- Constructor resolution based on name -->
		<property name="age"
			value="19" />
		<property name="salary"
			value="25000" />
		


		<!-- results in a setAddressList(java.util.List) call -->
		<property name="skills">
			<list>
				<value>front-end</value>
				<value>scripts</value>
				<value>DBA</value>
				<value>DAA</value>
			</list>
		</property>	
		
		<!-- Auto-wiring by name 
		<property name="address" ref="a" /> 
			  	<property name="date" ref="d" />  -->
		
	</bean>
	
	
<bean id="address" class="labs.Spring.Address" >
		<property name="city" value="Blore" />
				<property name="country" value="India" />
				<property name="pin" value="560096" />
		
	</bean>
<bean id="date" class="java.time.LocalDate" factory-method="parse">
<constructor-arg  value="2018-09-09"></constructor-arg>
</bean>			
</beans>